<%- include("parts/header") %> 

<section class="mt-4 pt4">
    <div class="container">
        <h2 class="display-2 text-center">Users</h2>
        <form action="/" method="POST" class="my-4 row py-4">
            <input type="text" name="name" placeholder="name" class="form-control col-6">

            <input type="number" name="age" placeholder="Age" class="form-control col-6">

            <button class="btn-success col-12 mt-4">Add user</button>
        </form>
        <table class="table table-striped table-bordered table-hover w-100 ">
            <thead>
                <tr>
                    <th>#id</th>
                    <th>name</th>
                    <th>age</th>
                    <th>delete</th>
                    <th>edit</th>
                </tr>
            </thead>
            <tbody>
                <% for(let user of users) {%>
                    <tr>
                        <td><%= user.user_id %>  </td>
                        <td><%= user.user_name %> </td>
                        <td><%= user.user_age %>  </td>
                        <td>
                            <form action="/delete" method="POST">
                                <button class="btn-danger p-1">delete</button>
                                <input type="hidden" name="id" value="<%= user.user_id %> ">
                            </form>
                        </td>
                        <td>
                            <form action="/edit" method="POST">
                                <input type="text" class="form-control" name="upload_name"  placeholder="name">
                                <input type="number" class="form-control" name="upload_age"  placeholder="age">
                                <input type="hidden" name="uploadid" value="<%= user.user_id %> ">
                                <button class="btn-success">edit</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>  

            </tbody>
        </table>
    </div>
c
<%- include("parts/footer") %> 